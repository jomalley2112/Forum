%h3 Sign up to be a member!

=form_for @user do |f|
	
        
	%table{:class => "rounded small-frm"}
		%tr 
			%td.field= f.label :username
			%td.field= f.text_field :username
		%tr 
			%td.field= f.label :email
			%td.field= f.text_field :email
		%tr 
			%td.field= f.label :password
			%td.field= f.password_field :password
		%tr 
			%td.field= f.label :password_confirmation
			%td.field= f.password_field :password_confirmation
		%tr 
			%td.btn-cell{:colspan => "2"}= f.submit
			
