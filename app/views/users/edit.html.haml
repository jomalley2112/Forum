%h3= "Edit Member info for #{current_user.username}"

=form_tag update_user_email_path, :method => "get" do
	=hidden_field_tag "id", current_user.id
	%table 
		%tr 
			%td= label_tag :email
			%td= text_field_tag :email, @user.email
		%tr 
			%td{:colspan => "2"}= submit_tag "Save Email"
		
%br/ 
=form_for current_user do |f|
	%table 
		%tr 
			%td= f.label :password, "New Password"
			%td= f.password_field :password
		%tr 
			%td= f.label :password_confirmation, "Confirm Password"
			%td= f.password_field :password_confirmation
		
		%tr 
			%td{:colspan => "2"}= submit_tag "Save Password"
