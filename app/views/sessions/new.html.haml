%h3 Member log in
=form_tag sessions_path do
	%table{:class => "rounded small-frm"}
		%tr 
			%td.lbl-sngl-ln= label_tag :username
			%td.field= text_field_tag :username
		%tr 
			%td.lbl-sngl-ln= label_tag :password
			%td.field= password_field_tag :password
		%tr 
			%td.btn-cell{:colspan => "2"}
				= submit_tag "Log in", :class => "btn"