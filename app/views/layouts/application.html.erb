<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= content_for(:head) %>
</head>
<body>
	
  <div class="container"> <!-- style="margin-left: 20px;" -->
  <% if current_user %>
    Logged in as <%= current_user.username %> (<%= link_to "edit", edit_user_path(current_user.id), :class => "nav" %>).
    <%= link_to "Member log out", logout_path, :class => "nav" %>
  <% else %>
    <%= link_to "Become a member", signup_path, :class => "nav" %> or
    <%= link_to "Member log in", login_path, :class => "nav" %>.
  <% end %>

  <div class="nav">
  	<% if current_user %>
  		<%= link_to "Create new Post", new_post_path, :class => "nav" %> |
      <%= link_to "View your Posts", user_posts_path, :class => "nav" %> |
      <%= link_to "View all Posts", root_path, :class => "nav" %>
  	<% end %>
  </div>

  <%= render "flash_messages" %>


  <%= yield %>
</div>
</body>
</html>
